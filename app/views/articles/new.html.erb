<h1>Create a New Article</h1>

<%= form_for(@article) do |f| %>
  <% if f.object.errors.any? %>
    <% f.object.errors.full_messages.each do |message| %>
      <p>
        <%= message %>
      </p>
    <% end %>
  <%end%>
 <p>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
 </p>
 <p>
  <%= f.label :body %><br />
  <%= f.text_area :body %>
 </p>
 <p>
  <%= f.submit 'Create' %>
 </p>
 <% end %>